---
import { SITE } from "src/config";

export interface Props {
  title: string;
  description: string;
  url: string;
  image?: string;
  datePublished: string;
  dateModified?: string;
  authorName?: string;
  authorUrl?: string;
  tags?: string[];
}

const {
  title,
  description,
  url,
  image,
  datePublished,
  dateModified = datePublished,
  authorName = SITE.author,
  authorUrl = new URL("/about", SITE.website).href,
  tags = [],
} = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: title,
  description,
  url,
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": url,
  },
  image: image || undefined,
  author: {
    "@type": "Person",
    name: authorName,
    url: authorUrl,
  },
  publisher: {
    "@type": "Organization",
    name: SITE.title,
    url: SITE.website,
  },
  datePublished,
  dateModified,
  keywords: tags.length > 0 ? tags.join(", ") : undefined,
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
